{
  "name": "autodebug",
  "displayName": "AutoDebug",
  "description": "Reduce debugging time by 10x",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:autodebug.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "autodebug.debugView",
          "name": "AutoDebug"
        }
      ]
    },
    "commands": [
      {
        "command": "autodebug.writeDocstring",
        "category": "AutoDebug",
        "title": "Write a docstring for the current function"
      },
      {
        "command": "autodebug.openDebugPanel",
        "category": "AutoDebug",
        "title": "Open Debug Panel"
      },
      {
        "command": "autodebug.askQuestionFromInput",
        "Category": "AutoDebug",
        "title": "Ask a question from input box"
      },
      {
        "command": "autodebug.openCapturedTerminal",
        "Category": "AutoDebug",
        "title": "Open Captured Terminal"
      },
      {
        "command": "autodebug.askQuestion",
        "Category": "AutoDebug",
        "title": "Ask a question from webview"
      },
      {
        "command": "autodebug.createTerminal",
        "category": "AutoDebug",
        "title": "Create Terminal"
      }
    ],
    "keybindings": [
      {
        "command": "autodebug.writeDocstring",
        "key": "ctrl+alt+l",
        "mac": "shift+cmd+l"
      },
      {
        "command": "autodebug.askQuestionFromInput",
        "key": "ctrl+alt+j",
        "mac": "shift+cmd+j"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "autodebug.openDebugPanel",
          "group": "navigation",
          "when": "view == autodebug.debugView"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "rebuild": "electron-rebuild -v 19.1.8 node-pty",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.2.10",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "node-pty": "^0.10.1"
  }
}
